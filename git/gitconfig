[alias]
    drop = restore --
    dropall = restore -- .
    unadd = reset HEAD
    uncmt = reset HEAD^
    cma = commit --amend
    br = branch
    brd = branch -d
    ck = checkout
    ckb = checkout -b
    sw = switch
    swc = switch -c
    ri = rebase -i
	st = status -sb
	cmm = commit -m
    ll = log --oneline
    llg = log --oneline --grep
	pushom = push origin main
	pullom = pull origin main
[core]
	editor = hx
	autocrlf = input
    pager = difft
	excludesfile = .gitignore_global
[diff]
    external = difft
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[merge]
    conflictstyle = diff3
