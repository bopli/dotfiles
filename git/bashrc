# If not running interactively, don't do anything
[[ $- != *i* ]] && return

{{#if (eq dotter.os "windows")}}
# Shopt
shopt -s completion_strip_exe
{{/if}}

export HISTFILESIZE=9000
export HISTSIZE=500
export HISTCONTROL=ignoredups:ignorespace
export HISTIGNORE="ls:cd:pwd:exit:clear:history:df:du:git status:git diff:git log"
export HISTTIMEFORMAT="%F %T "

# Alias
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"
alias df="df -Th"
alias du="du -sh"
alias less="less -r"
alias grep="grep --color=auto"
{{#if dotter.packages.bat}}
alias cat="bat"
{{/if}}
{{#if (is_executable "eza")}}
alias ls="eza --color=auto"
alias l="eza -F --color=auto"
alias la="eza -a --color=auto"
alias ll="eza -ahl --color=auto --time-style long-iso"
{{else}}
alias ls="ls --color=auto"
alias l="ls -F --color=auto"
alias la="ls -a --color=auto"
alias ll="ls -AFhl --color=auto"
{{/if}}

{{#if (is_executable "fzf")}}
eval "$(fzf --bash)"
{{/if}}

{{#if (is_executable "cargo")}}
# Completions for Cargo
if command -v rustc >/dev/null 2>&1; then
  source "$(rustc --print sysroot)"/etc/bash_completion.d/cargo
fi
{{/if}}
